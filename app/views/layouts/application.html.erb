<!DOCTYPE html>
<html>
<head>
  <title>ShyftplanTest</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<%= render partial: "layouts/partials/navbar" %>

<div class="container">
  <% if notice %>
    <p class="alert alert-success mt-2"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger mt-2"><%= alert %></p>
  <% end %>
  <%= yield %>
</div>

</body>
</html>