{{#each tasks.models}}
<div class="card my-1 col-sm-12 col-md-6 p-0">
  <div class="card-header">
    Timeframe: {{displayDate attributes.start_time}} - {{displayDate attributes.end_time}}
  </div>
  <div class="card-body">
    <p class="card-text">{{attributes.description}}</p>
    <a href="#" class="btn btn-info btn-sm edit_task" data-id="{{attributes.id}}">Edit</a>
    <a href="#" class="btn btn-danger btn-sm delete_task" data-id="{{attributes.id}}">Delete</a>
  </div>
</div>
{{ else }}
<div class="my-1 col-sm-12 col-md-6">
  <h5>Create your first task here</h5>
</div>
{{/each}}
